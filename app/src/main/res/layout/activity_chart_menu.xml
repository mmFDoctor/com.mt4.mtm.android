<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="chartEntity"
            type="activity.commt4mtmandroid.bindingEntity.ChartMenuEntity"/>
    </data>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="activity.commt4mtmandroid.activity.ChartMenuActivity">

            <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/tb_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorBlue"
                android:elevation="2dp"
                android:translationZ="2dp"
                android:titleTextColor="@color/colorWhite"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
                app:theme="@style/ToolbarTheme"
                app:title="@string/Index"
                app:titleTextColor="@color/colorWhite">
                <TextView
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:text="完成"
                    android:layout_width="?actionBarSize"
                    android:layout_height="match_parent" />
            </android.support.v7.widget.Toolbar>

            <RelativeLayout


                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color333"
                    android:textSize="18dp"
                    android:text="名称"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View style="@style/line_1px"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"/>
            </RelativeLayout>

            <RelativeLayout


                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color999"
                    android:textSize="16dp"
                    android:text="快速EMA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText

                    android:text="@={chartEntity.fastEMA}"
                    android:id="@+id/name_editText"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:paddingRight="40dp"
                    android:gravity="right"
                    android:inputType="number"
                    android:layout_alignParentRight="true"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />
                <View style="@style/line_1px"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"/>
            </RelativeLayout>
            <RelativeLayout


                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color999"
                    android:textSize="16dp"
                    android:text="慢速EMA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:text="@={chartEntity.slowEMA}"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:paddingRight="40dp"
                    android:gravity="right"
                    android:inputType="number"
                    android:layout_alignParentRight="true"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />
                <View style="@style/line_1px"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color999"
                    android:textSize="16dp"
                    android:text="MACD SMA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:text="@={chartEntity.MACDSMA}"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:paddingRight="40dp"
                    android:gravity="right"
                    android:inputType="number"
                    android:layout_alignParentRight="true"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />
                <View style="@style/line_1px"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/color666"
        android:padding="20dp"
        android:gravity="center"
        android:text="设为默认"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
</layout>