<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.commt4mtmandroid.activity.UserRegestActivity">

    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tb_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorWhite"
        android:elevation="2dp"
        android:translationZ="2dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:title="信息"
        app:titleTextColor="@color/color333">
        <TextView
            android:id="@+id/regist_textView"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:textSize="22dp"
            android:textColor="@color/colorBlue"
            android:text="注册"
            android:layout_gravity="right"
            android:layout_width="70dp"
            android:layout_height="match_parent" />
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="用户信息"
                android:textColor="@color/color333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout

                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color333"
                    android:textSize="18dp"
                    android:text="名称"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/name_editText"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorWhite"
                    android:paddingRight="20dp"
                    android:gravity="right"
                    android:hint="输入名称"
                    android:inputType="text"
                    android:layout_alignParentRight="true"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />
                <View style="@style/line_1px"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"/>
            </RelativeLayout>
            <RelativeLayout

                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color333"
                    android:textSize="18dp"
                    android:text="电话"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/phone_editText"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorWhite"
                    android:paddingRight="20dp"
                    android:gravity="right"
                    android:hint="输入电话"
                    android:inputType="number"
                    android:layout_alignParentRight="true"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />
                <View style="@style/line_1px"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"/>
            </RelativeLayout>
            <RelativeLayout

                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color333"
                    android:textSize="18dp"
                    android:text="QQ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/QQ_editText"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorWhite"
                    android:paddingRight="20dp"
                    android:gravity="right"
                    android:hint="输入QQ"
                    android:inputType="number"
                    android:layout_alignParentRight="true"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />
                <View style="@style/line_1px"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"/>
            </RelativeLayout>
            <RelativeLayout

                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color333"
                    android:textSize="18dp"
                    android:text="邮箱"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/email_editText"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorWhite"
                    android:paddingRight="20dp"
                    android:gravity="right"
                    android:hint="输入邮箱"
                    android:inputType="text"
                    android:layout_alignParentRight="true"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />
                <View style="@style/line_1px"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"/>
            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorWhite">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="验证码"
                    android:textColor="@color/color333"
                    android:textSize="18dp" />

                <EditText

                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/send"
                    android:id="@+id/messageCode_editText"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorWhite"
                    android:gravity="right"
                    android:hint="输入验证码"
                    android:inputType="text"
                    android:paddingRight="20dp" />

                <Button
                    android:id="@+id/send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="发送"
                    android:textColor="@color/colorBlue" />

                <View
                    style="@style/line_1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp" />
            </RelativeLayout>


            <TextView
                android:textColor="@color/color333"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="账户信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/account_type"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorWhite"
                android:clickable="true"
                android:foreground="?selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="账户类型"
                    android:textColor="@color/color333"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/account_type_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/more1"
                    android:text="advanced"
                    android:textColor="@color/color333"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/more1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/more" />

                <View
                    style="@style/line_1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ganggan"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorWhite"
                android:clickable="true"
                android:foreground="?selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="杠杆"
                    android:textColor="@color/color333"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/ganggan_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/more2"
                    android:text="1:100"
                    android:textColor="@color/color333"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/more2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/more" />

                <View
                    style="@style/line_1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                android:id="@+id/earnestRl"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color333"
                    android:textSize="18dp"
                    android:text="存款额"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/dingjin_TextView"
                    android:textColor="@color/color333"
                    android:layout_toLeftOf="@+id/more3"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textSize="18dp"
                    android:text="100000 USD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/more3"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/more"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <View style="@style/line_1px"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>
